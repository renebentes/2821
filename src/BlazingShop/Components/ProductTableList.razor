<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Título</th>
            <th>Preço</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Products)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Title</td>
                <td>@product.Price.ToString("C")</td>
                <td></td>
            </tr>
        }
    </tbody>
</table>

@code {

    [Parameter]
    public IEnumerable<Product> Products { get; set; } = [];
}
